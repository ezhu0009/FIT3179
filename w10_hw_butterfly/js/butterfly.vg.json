{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Fatal and non-Fatal Shark Attacks by Species in Australia, 1791-2024.",
    "anchor": "middle",
    "fontSize": 20
  },

  "data": {
    "url": "https://raw.githubusercontent.com/ezhu0009/FIT3179/refs/heads/main/w10_hw_butterfly/data/w10_shark_types.csv"
  },

  "transform": [
    {
      "calculate": "datum.victim_injury === 'fatal' ? -datum.number_incidents : datum.number_incidents",
      "as": "incident_count"
    },
    {
      "calculate": "abs(datum.incident_count)",
      "as": "abs_incident"
    }
  ],
  "spacing": 0,







  "hconcat": [



    {
      "height": 150,
      "title": "Fatal",

      "transform": [
        {"filter": {"field": "victim_injury", "equal": "fatal"}},
        {"filter": "datum.State == state || state == 'All'"}
      ],


      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "shark_name",
              "type": "nominal",
              "axis": null,
              "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"],
              "scale": {"domain": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]}
            },

            "x": {
              "aggregate": "sum",
              "field": "abs_incident",
              "title": "Attacks",
              "axis": {"format": "s", "grid": true},
              "scale": {"domain": [0, 250]},
              "sort": "descending"
            },

            "color": {
              "field": "shark_name",
              "scale": {"range": ["#66c2a5", "#fc8d62", "#8da0cb", "#e78ac3", "#a6d854"]},
              "legend": null
            }, 

            "tooltip": [
              {"field": "shark_name", "type": "nominal", "title": "Shark Common Name"},
              {"aggregate": "sum", "field": "abs_incident", "title": "Total Attacks"}
            ]

          }
        },
        


        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": -22,
            "dy": -1
          },

          "encoding": {
            "y": {
              "field": "shark_name",
              "type": "nominal",
              "axis": null,
              "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]
            },

            "x": {
              "aggregate": "sum",
              "field": "abs_incident",
              "stack": "zero"
            },

            "text": {
              "aggregate": "sum",
              "field": "abs_incident",
              "type": "quantitative"
            },

            "color": {"value": "black"}
          }
        }
      ]
    },











    {
      "width": 100,
      "height": 150,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },

      "encoding": {
        "y": {
          "field": "shark_name",
          "type": "nominal",
          "axis": null,
          "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"],
          "scale": {"domain": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]}
        },

        "text": {"field": "shark_name", "type": "nominal"}
      }
    },













    {
      "height": 150,
      "title": "Non-fatal",

      "transform": [
        {"filter": {"field": "victim_injury", "equal": "survived"}},
        {"filter": "datum.State == state || state == 'All'"}
      ],

      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "shark_name",
              "type": "ordinal",
              "axis": null,
              "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"],
              "scale": {"domain": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]}
            },

            "x": {
              "aggregate": "sum",
              "field": "abs_incident",
              "title": "Attacks",
              "axis": {"format": "s", "grid": true},
              "sort": "ascending"
            },

            "color": {
              "field": "shark_name",
              "scale": {"range": ["#66c2a5", "#fc8d62", "#8da0cb", "#e78ac3", "#a6d854"]},
              "legend": null
            }, 
            "tooltip": [
              {"field": "shark_name", "type": "nominal", "title": "Shark Common Name"},
              {"aggregate": "sum", "field": "abs_incident", "title": "Total Attacks"}
            ]
          }
        },



        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 7,
            "dy": 0
          },

          "encoding": {
            "y": {
              "field": "shark_name",
              "type": "ordinal",
              "axis": null,
              "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]
            },

            "x": {
              "aggregate": "sum",
              "field": "abs_incident",
              "stack": "zero"
            },

            "text": {
              "aggregate": "sum",
              "field": "abs_incident",
              "type": "quantitative"
            },

            "color": {"value": "black"}
          }
        }
      ]

    }
  ],












  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  },










  "params": [
    {
      "name": "state",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "NSW", "QLD", "WA", "NT", "SA", "TAS", "VIC"],
        "labels": ["All", "NSW", "QLD", "WA", "NT", "SA", "TAS", "VIC"],
        "name": "Filter by State or Territory:  "
      }
    }
  ]




  
}
