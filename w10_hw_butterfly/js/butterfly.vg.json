{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Fatal and non-Fatal Shark Attacks by Species in Australia, 1791-2024.",
    "anchor": "middle",
    "fontSize": 20
  },

  "data": {
    "url": "https://raw.githubusercontent.com/ezhu0009/FIT3179/refs/heads/main/w10_hw_butterfly/data/w10_shark_types.csv"
  },
  
  "transform": [
    {
      "calculate": "datum.victim_injury === 'fatal' ? -datum.number_incidents : datum.number_incidents",
      "as": "incident_count"
    },
    {
      "calculate": "abs(datum.incident_count)",
      "as": "abs_incident"
    }
  ],
  "spacing": 0,



  "hconcat": [

    {
      "transform": [
        {"filter": {"field": "victim_injury", "equal": "fatal"}},
        {"filter": "datum.State == state || state == 'All'"}
      ],

      "title": "Fatal",
      "mark": "bar",

      "encoding": {
        "y": {
          "field": "shark_name",
          "type": "nominal",
          "axis": null,
          "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]
        },

        "x": {
          "aggregate": "sum",
          "field": "abs_incident",
          "title": "Attacks",
          "axis": {"format": "s", "grid": true},
          "scale": {"domain": [0, 250]},
          "sort": "descending"
        },

        "color": {
          "field": "shark_name",
          "scale": {"scheme": "category20"},
          "legend": null
        },

        "tooltip": [
          {"field": "shark_name", "type": "nominal", "title": "Shark Common Name"},
          {"aggregate": "sum", "field": "abs_incident", "title": "Total Attacks"}
        ]
      }
    },




    {
      "width": 100,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },

      "encoding": {
        "y": {
          "field": "shark_name",
          "type": "nominal",
          "axis": null,
          "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]
        },

        "text": {"field": "shark_name", "type": "nominal"}
      }
    },



    {
      "transform": [
        {"filter": {"field": "victim_injury", "equal": "survived"}},
        {"filter": "datum.State == state || state == 'All'"}
      ],

      "title": "Non-fatal",
      "mark": "bar",

      "encoding": {
        "y": {
          "field": "shark_name",
          "type": "ordinal",
          "axis": null,
          "sort": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"]
        },

        "x": {
          "aggregate": "sum",
          "field": "abs_incident",
          "title": "Attacks",
          "axis": {"format": "s", "grid": true},
          "sort": "ascending"
        },

        "color": {
          "field": "shark_name",
          "scale": {"scheme": "category20"},
          "legend": null
        },

        "tooltip": [
          {"field": "shark_name", "type": "nominal", "title": "Shark Common Name"},
          {"aggregate": "sum", "field": "abs_incident", "title": "Total Attacks"}
        ]
      }
    },



    {
      "transform": [
        {"filter": {"field": "shark_name", "equal": "white shark"}},
        {"aggregate": [
          {"op": "sum", "field": "abs_incident", "as": "total_attacks"}
        ]}
      ],
      "mark": "text",
      "encoding": {
        "text": {"value": "White shark scientific name:\nCarcharodon carcharias"},
        "fill": {"value": "grey"}
      }
    }



  ],


 
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  },

  
  "params": [
    {
      "name": "state",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "NSW", "QLD", "WA", "NT", "SA", "TAS", "VIC"],
        "labels": ["All", "NSW", "QLD", "WA", "NT", "SA", "TAS", "VIC"],
        "name": "Filter by State or Territory:  "
      }
    }
  ]


}
