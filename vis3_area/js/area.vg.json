
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ezhu0009/FIT3179/refs/heads/main/vis3_area/data/yearly_shark.csv"},
    
    
    "vconcat": [{

      "title": {
          "text": "Annual number of Attacks from 1791 - 2024",
          "anchor": "middle",
          "fontSize": 18
        },
        
      "width": 750,
      "height": 300,
      "mark": "bar",

      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "year",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"format": "%Y", "title": ""}
        },

        "y": {
          "field": "number_incidents", 
          "type": "quantitative", 
          "title": "Number of Attacks"
          
        }, 

        "color": {
          "field": "number_incidents",
          "title": "Annual Attacks",
          "scale": {
            "type": "threshold", 
            "domain": [5, 10, 20], 
            "range": ["#bdc9e1", "#74a9cf", "#2b8cbe", "#045a8d"]
          }

          
        },

        "tooltip": [
          {"field": "year", "type": "temporal", "title": "Year", "format": "%Y"},
          {"aggregate": "sum", "field": "number_incidents", "title": "Annual Attacks"}
        ]
      }

    },


    

    {
      "title": {
          "text": "Dragging Timeline slider",
          "anchor": "middle",
          "fontSize": 13,
          "fontWeight": "lighter"
        },

      "width": 750, 
      "height": 70, 
      "mark": "rule", 

      "params": [{
        "name": "brush", 
        "select": {"type": "interval", "encodings": ["x"]}
      }],

      "encoding": {
        "x": {
          "field": "year", 
          "type": "temporal", 
          "title": "Year"
        }, 

        "y": {
          "field": "number_incidents",
          "type": "quantitative",
          "title": "Number of Attacks",
          "axis": {"tickCount": 3, "grid": false}
        }
      }

    }


  
  ]

  



      

  }
